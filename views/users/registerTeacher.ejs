<% layout("layouts/boilerplate") %>

<div class="row my-3">
    <div class="col-sm-8 offset-sm-2">
        <h5 class="card-title">Register as Teacher</h5>
        <form action="/registerTeacher" method="POST" class="validated-form" novalidate>
            <div class="mb-3">
                <label class="form-label" for="masterPassword">Teacher Registration Password</label>
                <div class="input-group">
                    <input class="form-control" type="password" id="masterPassword" name="masterPassword" autofocus
                        required>
                    <span class="input-group-text password-toggle" style="cursor:pointer;">
                        <img src="/imgs/closedEye.svg" alt="">
                    </span>
                    <div class="valid-feedback">All Good!</div>
                    <div class="invalid-feedback">Please enter a valid password</div>
                </div>
                <div class="invalid-feedback">Please enter the teacher registration password</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="username">Username</label>
                <input class="form-control" type="username" id="username" name="username" required>
                <div class="valid-feedback">All Good!</div>
                <div class="invalid-feedback">Please enter a valid username</div>
            </div>
            <div class="mb-3">
                <%- include("../partials/passwordInput") %>
            </div>
            <div class="d-grid">
                <button class="btn btn-success">Register</button>
            </div>
        </form>
    </div>
</div>