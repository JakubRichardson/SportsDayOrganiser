<% layout("layouts/boilerplate") %>

    <div class="row my-3">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <img src="/imgs/hurricanesLogo.jpg" alt="" class="img-thumbnail rounded mb-3" />
            <h5 class="card-title">Login</h5>
            <form action="/login" method="POST" class="validated-form" novalidate>
                <div class="mb-3">
                    <label class="form-label" for="username">Username</label>
                    <input class="form-control" type="username" id="username" name="username" autofocus required>
                    <div class="valid-feedback">All Good!</div>
                    <div class="invalid-feedback">Please enter a valid username</div>
                </div>
                <div class="mb-3">
                    <%- include("../partials/passwordInput") %>
                </div>
                <div class="d-grid">
                    <button class="btn btn-success d-block">Login</button>
                </div>
            </form>
        </div>
    </div>