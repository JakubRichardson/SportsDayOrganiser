<% layout("layouts/boilerplate") %>

    <h1>Edit Sports Day</h1>
    <form action="/sportsDays/<%= day._id %>?_method=PUT" method="POST">
        <div class="mb-3">
            <label class="form-label" for="title">Title</label>
            <input class="form-control" type="text" name="name" id="title" placeholder="Sports day name"
                value="<%= day.name %>">
        </div>
        <div class="mb-3">
            <button class="btn btn-info">Submit</button>
        </div>
    </form>

    <form action="/sportsDays/<%= day._id %>">
        <button class="btn btn-primary">Back to All Sports Days</button>
    </form>