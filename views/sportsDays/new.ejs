<% layout("layouts/boilerplate") %>

    <h1>New Sports Day</h1>
    <form action="/sportsDays" method="POST" novalidate class="validated-form row">
        <div class="mb-3">
            <label class="form-label" for="title">Title</label>
            <input class="form-control" type="text" name="name" id="title" placeholder="Sports day name" required>
            <div class="valid-feedback">Looks Good!</div>
        </div>
        <div class="col-md-6 mb-3">
            <label class="form-label" for="year">Year Group (1 to 13)</label>
            <input class="form-control" type="number" name="year" id="year" placeholder="Year Group" min="1" max="13"
                required>
            <div class="valid-feedback">Looks Good!</div>
        </div>
        <div class="col-md-6 mb-3">
            <label class="form-label" for="date">Date</label>
            <input class="form-control" type="date" name="date" id="date" required>
            <div class="valid-feedback">Looks Good!</div>
        </div>
        <div class="mb-3">
            Template Events
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">Event</th>
                            <th scope="col">Gender</th>
                            <th scope="col"></th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(event of templates) { %>
                            <tr>
                                <td>
                                    <%= event.name %>
                                </td>
                                <td>
                                    <div class="form-check col">
                                        <input class="form-check-input" type="checkbox" value="Female" id="male"
                                            name="events[<%= event.id %>][]">
                                        <label class="form-check-label" for="flexCheckDefault">
                                            Male
                                        </label>
                                    </div>
                                </td>
                                <td>
                                    <div class="form-check col">
                                        <input class="form-check-input" type="checkbox" value="Male" id="female"
                                            name="events[<%= event.id %>][]">
                                        <label class="form-check-label" for="flexCheckChecked">
                                            Female
                                        </label>
                                    </div>
                                </td>
                                <td>
                                    <div class="form-check col">
                                        <input class="form-check-input" type="checkbox" value="Other" id="other"
                                            name="events[<%= event.id %>][]">
                                        <label class="form-check-label" for="flexCheckChecked">
                                            Other
                                        </label>
                                    </div>
                                </td>
                            </tr>
                            <% } %>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="mb-3">
            <button class="btn btn-success">Add Sports Day</button>
        </div>
    </form>