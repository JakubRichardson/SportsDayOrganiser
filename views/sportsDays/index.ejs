<% layout("layouts/boilerplate") %>

    <div class="row">
        <div class="col-md-6 mb-3">
            <h1>All Sports Days</h1>
        </div>
        <div class="col-md-6 mb-3 d-flex align-items-center">
            <a class="btn btn-success btn-lg" href="/sportsDays/new">New Sports Day</a>
        </div>
    </div>

    <div class="row">
        <% for(let day of sportsDays) { %>
            <div class="col-sm-6 mb-3">
                <a class="text-decoration-none text-reset" href="/sportsDays/<%=day._id %>">
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                <h5 class="card-title col-md-6">
                                    <%= day.name %>
                                </h5>
                                <div class="col-md-6 text-md-end">
                                    <%= day.date.toDateString() %>
                                </div>
                                <div>
                                    Year: <%= day.year %>
                                </div>
                            </div>
                            <p class="card-text">
                                <% if(day.events.length> 0) { %>
                                    <p class="card-text">Events - <%= day.events.length %>: </p>
                                    <ul>
                                        <% for(let event of day.events) { %>
                                            <li>
                                                <%= event.name %>
                                            </li>
                                            <% } %>
                                    </ul>
                                    <% } else { %>
                                        <p class="card-text">No events yet!</p>
                                        <% } %>
                                            <!-- <button class="btn btn-primary">Sign up</button> -->
                            </p>
                            <div class="row">
                                <form class="col-auto" action="/sportsDays/<%= day._id %>/edit">
                                    <button class="btn btn-warning">Edit</button>
                                </form>

                                <form class="col-auto" action="/sportsDays/<%= day._id %>?_method=DELETE" method="POST">
                                    <button class="btn btn-danger">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
            <% } %>
    </div>